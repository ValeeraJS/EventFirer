{
	"compilerOptions": {
		"declaration": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"target": "esnext"
	},
	"include": [
        "src/**/*"
    ],
	"exclude": [
		"node_modules",
		"lib",
		"es"
	]
}